{
  "compilerOptions": {
    "target": "es2016",                                     /* Set the JavaScript language version for emitted JavaScript */
    "module": "commonjs",                                    /* Specify what module code is generated */
    "moduleResolution": "node",                              /* Use Node.js module resolution strategy */
    "outDir": "./dist",                                      /* Redirect output structure to the dist folder */
    "rootDir": "./src",                                      /* Specify the root directory of your TypeScript source code */
    "esModuleInterop": true,                                 /* Enable interoperability between CommonJS and ES modules */
    "experimentalDecorators": true,                           /* Enable support for decorators */
    "emitDecoratorMetadata": true,                            /* Emit design-type metadata for decorated declarations */
    "strict": true,                                          /* Enable all strict type-checking options */
    "skipLibCheck": true,                                    /* Skip type checking for declaration files */
    "forceConsistentCasingInFileNames": true,                 /* Ensure consistent casing in file names */
    "noUnusedLocals": true,                                   /* Enable error reporting for unused local variables */
    "noUnusedParameters": true,                               /* Enable error reporting for unused parameters */
    "noImplicitReturns": true,                                /* Enable error reporting for code paths without a return */
    "noFallthroughCasesInSwitch": true,                       /* Enable error reporting for fall-through in switch cases */
    "resolveJsonModule": true,                                /* Allow importing .json files */
    "skipDefaultLibCheck": true,                              /* Skip type checking of default library files */
    "declaration": true,                                      /* Generate declaration files (.d.ts) */
    "sourceMap": true                                         /* Enable source maps */
  },
  "include": ["src/**/*"],                                   /* Include all files in the src folder */
  "exclude": ["node_modules", "dist"]                          /* Exclude node_modules and dist folders */
}

